int MotionPin = 2;
int LEDPin = 13;
int detect = 0;
void setup()
{
  pinMode(MotionPin, INPUT);
  pinMode(LEDPin, OUTPUT);
  Serial.begin(9600);
}

void loop()
{
  detect = digitalRead(MotionPin);
  if (detect == HIGH){
    digitalWrite(LEDPin, HIGH);
  	Serial.println("Yes"); 
  } else 
  {
    digitalWrite(LEDPin, LOW);
    Serial.println("No");
   }
  delay(5000);
}
